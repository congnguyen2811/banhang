<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChitietActivity">
    <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    app:title="Chi tiết sản phẩm"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#F8EC08"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/toolbarCT">
        <FrameLayout
            android:id="@+id/frameGioHang"
            android:layout_width="55dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="?attr/actionBarSize">
            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/menu_sl"
                android:layout_gravity="top|right"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/imgCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cart"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbarCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgChitiet"
            android:src="@drawable/iconnew"
            android:layout_width="150dp"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtTenSPCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/t_n_s_n_ph_m"/>
            <TextView
                android:textSize="20sp"
                android:id="@+id/txtGiaCT"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gi_250000"/>
            <Spinner
                android:layout_marginEnd="20dp"
                android:id="@+id/spnSoLuong"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="@string/th_m_v_o_gi_h_ng"
                android:layout_marginEnd="10dp"
                android:id="@+id/btnThemGioHang"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:text="Xem Video"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnVideoSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m_t_chi_ti_t_s_n_ph_m"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtMotaCT"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>